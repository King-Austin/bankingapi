# Environment variables template for SecureCipher Banking API
# Copy this file to .env and update the values for your environment

# Django Core Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True
ENVIRONMENT=development

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL on Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# API Settings
API_TIMEOUT=30
MAX_REQUEST_SIZE=10485760

# Banking Specific Settings
TRANSACTION_DAILY_LIMIT=50000.00
MINIMUM_BALANCE=100.00
DEMO_ACCOUNT_BALANCE=50000.00
DEFAULT_CURRENCY=NGN
CURRENCY_SYMBOL=â‚¦

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Default Admin User (for initial setup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@securecipher.com
DJANGO_SUPERUSER_PASSWORD=change-this-password

# Security Headers
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Logging
LOG_LEVEL=INFO
ENABLE_DB_LOGGING=False

# Static Files (for production)
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/mediafiles

# Time Zone
TIME_ZONE=Africa/Lagos
