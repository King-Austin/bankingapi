# Production Environment Variables
SECRET_KEY=generate-a-secure-secret-key-for-production
DEBUG=False
ENVIRONMENT=production

# Database (PostgreSQL on Render)
DATABASE_URL=postgresql://user:password@host:port/database

# Security
ALLOWED_HOSTS=.onrender.com,your-custom-domain.com
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.onrender.com,https://your-custom-domain.com

# Banking Settings
TRANSACTION_DAILY_LIMIT=50000.00
MINIMUM_BALANCE=100.00
DEMO_ACCOUNT_BALANCE=50000.00
DEFAULT_CURRENCY=NGN
CURRENCY_SYMBOL=â‚¦

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Admin User
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@securecipher.com
DJANGO_SUPERUSER_PASSWORD=secure-password-here

# Security Headers
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Logging
LOG_LEVEL=INFO
ENABLE_DB_LOGGING=False

# Static Files
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/mediafiles

# Time Zone
TIME_ZONE=Africa/Lagos
